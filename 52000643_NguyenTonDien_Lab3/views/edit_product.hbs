<div class="container">
    <a href="/product_list" class="btn btn-link">Quay lai</a>
    <h1 class="text-success">Chinh sua san pham</h1>

    {{#if flash}}
        <div class="alert alert-{{flash.type}} alert-dismissible fade show" role="alert">
            <strong>{{flash.intro}}</strong> {{flash.message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/if}}
    <form action="/update/{{id}}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="">Ten san pham</label>
            <input type="text" name="product_name" 
                placeholder="{{name}}" class="form-control">
        </div>

        <div class="form-group">
            <label for="">Gia san pham</label>
            <input type="number" name="product_price" id=""
                    placeholder="{{price}}" class="form-control">
        </div>

        <div class="form-group">
            <label for="fieldPhoto">Chon anh moi</label>
            <input type="file" class="form-control" accept="image/*" id="fieldPhoto" name="photo">
            
        </div>

        <div class="form-group">
            <label for="">Mo ta</label>
            <textarea name="product_desc" id="" cols="30" rows="7" class="form-control" placeholder="{{desc}}"></textarea>
        </div>

        <button class="btn btn-success">Them san pham</button>
    </form>
</div>